		数据库中 增加了 商品的库存字段  以及 商品图片 用户添加头像  （保存用户头像）
		
		修改了 衣服表的 size 字段的长度 （长度增加，由于varchar设置太短，导致数据插不入）
		alter table cloth modify size varchar(100);
		
	1.3 为应用创建相应库和表
		
		create database shop;
		use shop;
		
		create table operator(
		o_id int primary key auto_increment,
		name varchar(20),
		password varchar(20),
		loginTime datetime
		);
		
		create table user(
		user_id varchar(20) primary key,
		nickname varchar(20),
		password varchar(20),
		phonenum varchar(15),
		email varchar(20), 
		address varchar(20),
		cardID varchar(20),
		role int,
		image varchar(100)
		);
		
		create table store(
		store_id int primary key auto_increment,
		storename varchar(20),
		owner_id varchar(20),
		description varchar(100),
		foreign key (owner_id) references user(user_id)
		);
		
		create table book(
		book_id int primary key auto_increment,
		bookname varchar(20),
		author varchar(20),
		press varchar(20),
		totalnum int,
		B_price float,
		B_version varchar(100),   
		B_images varchar(255),
		ISBN varchar(20),
		B_description varchar(100),
		B_store_id int,
		foreign key (B_store_id) references store(store_id)
		);
		
		create table food(
		food_id int primary key auto_increment,
		foodname varchar(20),
		F_price float,
		totalnum int,
		F_images varchar(255),
		F_description varchar(100),
		F_store_id int,
		foreign key (F_store_id ) references store(store_id)
		);
		
		create table cloth(
		cloth_id int primary key auto_increment,
		clothname varchar(20),
		C_version varchar(100),   
		C_price float,
		totalnum int,
		size varchar(100),  
		color varchar(10),        
		C_images varchar(255),
		C_description varchar(100),
		C_store_id int,
		foreign key (C_store_id ) references store(store_id)
		);
		
		create table cart(
		cart_id int primary key auto_increment,
		good_id int, 
		user_id varchar(20),
		quantity int,
		totalprice float,
		version varchar(50),
		foreign key (user_id) references user(user_id)
		);
		
		create table Orders(
		order_id int primary key auto_increment,
		good_id int,
		user_id varchar(20),
		store_id int,
		quantity int,
		ordertime datetime,
		state int,
		price float,
		foreign key (user_id) references user(user_id),
		foreign key (store_id) references store(store_id)
		);
		
